<h1>Listing works</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Task</th>
    <th>Mechanical turk</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @works.each do |work| %>
  <tr>
    <td><%= work.description %></td>
    <td><%= work.task_id %></td>
    <td><%= work.mechanical_turk.name if work.mechanical_turk %></td>
    <td><%= work.status %></td>
    <td><%= link_to 'Show', work %></td>
    <td><%= link_to 'Edit', edit_work_path(work) %></td>
    <td><%= link_to 'Destroy', work, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

